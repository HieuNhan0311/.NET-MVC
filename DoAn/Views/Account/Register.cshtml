@model DoAn.ViewModel.RegisterVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/LoginPage.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            @Html.LabelFor(x => x.User)
            @Html.TextBoxFor(x => x.User, new { placeholder = "Username", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.User)
        </div>

        <div class="col-md-6">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="col-md-6">
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(x => x.Password, new { placeholder = "Password", @class = "form-control"})
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        <div class="col-md-6">
            @Html.LabelFor(x => x.ConfirmPassword)
            @Html.PasswordFor(x => x.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ConfirmPassword)
        </div>

        <div class="col-md-6">
            @Html.LabelFor(x => x.Mobile)
            @Html.TextBoxFor(x => x.Mobile, new { placeholder = "Mobile", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Mobile)
        </div>

        <div class="col-md-6">
            @Html.LabelFor(x => x.DateOfBirth)
            @Html.TextBoxFor(x => x.DateOfBirth, new { placeholder = "Date Of Birth", @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(x => x.DateOfBirth)
        </div>

        <div class="col-md-6">
            @Html.LabelFor(x => x.Address)
            @Html.TextBoxFor(x => x.Address, new { placeholder = "Address", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Address)
        </div>

        <div class="col-md-6">
            @Html.LabelFor(x => x.City)
            @Html.TextBoxFor(x => x.City, new { placeholder = "City", @class = "form-control"})
            @Html.ValidationMessageFor(x => x.City)
        </div>
    </div>
    <button type="submit" class="btn btn-success">Register</button>
}
