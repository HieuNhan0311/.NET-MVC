@model List<DoAn.Models.Cart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LoginPage.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Image</th>
        <th>Quantity</th>
        <th>Delete Pro</th>
        <th>Tol. Price</th>
    </tr>
    @{
        int i = 1;
        int totPrice = 0;
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSp</td>
            <td>@item.SanPham.TenSP</td>
            <td><img src="@item.SanPham.Anh" style="width: 50%; height: 175px" /></td>
            <td>
                @using (Html.BeginForm("UpdateQuantity", "Cart", FormMethod.Get))
                {
                    <input type="number" name="quan" value="@item.Quantity" min="1" style="width: 60px;" />
                    <input type="hidden" name="proid" value="@item.MaSp" />
                    <input type="submit" value="Update" class="btn btn-warning" />
                }
            </td>
            <td>
                @using (Html.BeginForm("DeletePro", "Cart", FormMethod.Post))
                {
                    @Html.Hidden("id", item.MaSp)
                    <input type="submit" value="Delete" class="btn btn-danger" />
                }
            </td>
            <td>
                @{
                    int Price = (int)(item.Quantity * item.SanPham.GiaBan);
                    totPrice += Price;
                    i++;
                }
                @Price.ToString("N0") VNĐ
            </td>
        </tr>
    }
    <tr>
        <td colspan="5" class="text-center fw-bold">Tổng tiền</td>
        <td>@totPrice.ToString("N0") VNĐ</td>
        <td colspan="5" style="text-align:right"><button class="btn btn-primary" onclick="myfunction()">Thanh toán</button></td>
    </tr>
</table>

