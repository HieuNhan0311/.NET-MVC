    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 850px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .card button:hover {
            opacity: 0.7;
        }
</style>


<div class="card">
    <img src="@Html.DisplayFor(x => Model.Anh)" style="width:100%">
    <h>@Html.DisplayFor(x => Model.TenSP)</h>
    <h>Số lượng còn lại: @Html.DisplayFor(x => Model.SLTon)</h>
    <p class="price">@Html.DisplayFor(x => Model.GiaBan) VNĐ</p>
    <p>@Html.DisplayFor(x => Model.MoTa)</p>
    <p><button onclick="location.href='@Url.Action("AddToCart", "Cart", new { productId = Model.MaSp})'">Add to Cart</button></p>
</div>









